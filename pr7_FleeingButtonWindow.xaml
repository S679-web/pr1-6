<Window x:Class="pr7_9.FleeingButtonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pr7_9"
        mc:Ignorable="d"
        Title="FleeingButtonWindow" Height="450" Width="800">
    <Grid>
        <Canvas Name="MainCanvas" Background="LightGray">
            <Button Name="FleeingButton" Content="Поймай меня!"
                    Width="100" Height="30"
                    Canvas.Left="100" Canvas.Top="100"
                    MouseEnter="FleeingButton_MouseEnter"/>
        </Canvas>
    </Grid>
</Window>
